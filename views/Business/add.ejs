<% include ../templates/header %>
<div class="container" ng-controller="businessCtrl">
    <div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Add Company</h1>

    <!-- Sign Up FORM -->

    <form novalidate ng-submit="newBusiness()">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" ng-model="name" placeholder="Name" required>
        </div>

        <div class="form-group">
            <label>Logo</label>
            <input type="file" class="form-control" ng-model="logo" placeholder="Logo Url"/>
        </div>

        <hr />
        <div class="form-group">
            <label>Address</label>
            <input type="text" class="form-control" ng-model="address" placeholder="Address" required>
        </div>

        <div class="form-group">
            <label>Floor or Apartment #</label>
            <input type="text" class="form-control" ng-model="address_2" placeholder="Floor or Apartment #">
        </div>

        <input type="hidden" class="form-control" name="city" placeholder="Company Zip Code" value="Brookyln" required/>
        <input type="hidden" class="form-control" name="state" placeholder="Company State" value="NY" required/>
        <input type="hidden" class="form-control" name="zip" placeholder="Zip Code" value="11421" required/>

        <hr />

        <div class="form-group">
            <label>History</label>
            <textarea type="text" class="form-control" ng-model="history" placeholder="History" style="resize: none" rows=12></textarea>
        </div>
        <div class="form-group">
            <label>Website</label><br />
            <span>http://&nbsp;</span><input type="url" class="form-control" ng-model="url" placeholder="www.your-company-site.com" style="width: 80%; display: inline-block;">
        </div>

        <input type="hidden" name="roleID" value="1">
        <div class="row">
            <div class="col-xs-offset-0 col-sm-offset-0 col-md-offset-7 col-lg-offset-7"></div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-warning pull-right">Add Business</button>
            </div>
            <div class="col-md-2">
                <a href="/" class="btn btn-danger pull-right">Cancel</a>
            </div>
    </form>

</div>
</div>
</body>
</html>
