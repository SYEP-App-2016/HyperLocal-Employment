<% include ./templates/header %>

<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Add Company</h1>

    <!-- Sign Up FORM -->
    
    <form action="Business/Add" method="POST">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="company_name" placeholder="Name" required>
        </div>

        <div class="form-group">
            <label>Logo</label>
            <input type="file" class="form-control" name="logo" placeholder="Logo Url"/>
        </div>

        <hr />
        <div class="form-group">
            <label>Address</label>
            <input type="text" class="form-control" name="company_address" placeholder="Address" required>
        </div>

        <div class="form-group">
            <label>Floor or Apartment #</label>
            <input type="text" class="form-control" name="company_address_1" placeholder="Floor or Apartment #">
        </div>


        <div class="row">
            <div class="form-group col-md-4">
                <label>City</label>
                <input type="text" class="form-control" name="company_city" placeholder="Company Zip Code" value="Brookyln" required disabled />
            </div>
            <div class="form-group col-md-4">
                <label>State</label>
                <input type="text" class="form-control" name="company_state" placeholder="Company State" value="New York" required disabled />
            </div>
            <div class="form-group col-md-4">
                <label>Zip Code</label>
                <input type="text" class="form-control" name="company_zip_code" placeholder="Zip Code" required disabled />
            </div>
        </div>


        <hr />

        <div class="form-group">
            <label>History</label>
            <textarea type="text" class="form-control" name="history" placeholder="History" style="resize: none" rows=12></textarea>
        </div>
        <div class="form-group">
            <label>Website</label><br />
            <span>http://&nbsp;</span><input type="url" class="form-control" name="url" placeholder="www.your-company-site.com" style="width: 80%; display: inline-block;">
        </div>

        <input type="hidden" name="roleID" value="1">
        <div class="row">
            <div class="col-xs-offset-0 col-sm-offset-0 col-md-offset-7 col-lg-offset-7"></div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-warning pull-right">Add Business</button>
            </div>
            <div class="col-md-2"> 
                <button type="submit" class="btn btn-danger pull-right">Cancel</button>
            </div>
    </form>
    
</div>

</div>
<script type="text/javascript">
    
    function getElement(el){
        return $(el)[0];
    }

    var r = {};
    function makeRequest(){

        var addr = $("[name='company_address']")[0].value;

        $.get("https://maps.googleapis.com/maps/api/geocode/json?address=" + addr, function(results){
            
            r = results;
            console.log(results);
        });
    }

    $("[name='company_address']").focusout(makeRequest);

</script>
