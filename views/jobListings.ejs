<% include ./templates/header %>
<div class="container">
    <div class="page-header">
        <h1>Job Listing</h1>
    </div>
    <% console.log(results) %>
    <% for(var date in results) {%>
    <div class="row page-header">
        <div class="col-xs-12 col-sm-2">
            <center><h1><small><%= date %></small></h1></center>
        </div>
        <div class="col-xs-12 col-sm-10">
            <% for(var i = 0; i < results[date].length; i++) {%>
            <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img style="height: 180px" src="<%= results[date][i].img %>" alt="...">
                    <div class="caption">
                        <h4><%= results[date][i].jb_position %></h4>
                        <div class="row catsal">
                            <small>
                                <p class="col-sm-8"><em><%= results[date][i].catergory %></em></p>
                                <p class="col-sm-4"><em>$<%= results[date][i].pay_rt %>/<%= results[date][i].sal %></em></p>
                            </small>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <small><p class="desc_teaser"><%= results[date][i].jb_desc_teaser %></p></small>
                            </div>
                        </div>
                        <div class='row'>
                            <div class="col-xs-6">
                                <a href="/<%= results[date][i]._id%>/<%= results[date][i].jb_position %>" class="btn btn-primary btn-sm" role="button">View More</a>
                            </div>
                            <div class="col-xs-6">
                                <p class="pull-right"><em><%= results[date][i].view_count %> views</em></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%}%>
        </div>
    </div>
    <%}%>
</div>
<% include ./templates/footer %>
