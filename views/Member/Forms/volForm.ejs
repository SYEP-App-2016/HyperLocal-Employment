<div class="row">
   <div class="col-xs-12 col-sm-3">
      <center>
         <h1><small>Volunteer Work</small></h1>
      </center>
   </div>
   <div class="col-xs-12 col-sm-9">
      <div ng-show="vol.length == 0" class="panel panel-default">
         <div class="panel-body">
            You have no Volunteer Experience posted. Would you like to add one?
            <div ng-click="show('Vol')" class="btn btn-primary pull-right fa fa-plus volBtn"></div>
         </div>
      </div>
      <div ng-repeat="v in vol" class= "panel panel-default">
         <div class="panel-body">
            <p><u> {{v.org}}/ {{v.cause}}</u></p>
            <p>{{v.role}}/{{v.desc}}</p>
            <div class="row">
               <div class="col-xs-2 col-xs-offset-10">
                  <div class="fa fa-pencil btn btn-lg btn-success"></div>
                  <form method="POST" action="removeVolunteerExp" style="display: inline-block">
                     <input type="hidden" value="{{ v._id }}" name="vol_id"/>
                     <button class="fa fa-trash btn-lg btn-danger"></button>
                  </form>
               </div>
            </div>
         </div>
      </div>
      <div ng-show="vol.length > 0" class="panel panel-default">
         <div class="panel-body">
            <div ng-click="show('Vol')" class="btn btn-primary pull-right fa fa-plus volBtn"></div>
         </div>
      </div>
      <div ng-show="dVol" class="panel panel-default volForm">
         <div class="panel-body">
            <form novalidate ng-submit="addVol()">
               <div class="form-group">
                  <label>Organization</label>
                  <input type="text" class="form-control" name="organization" placeholder="Name of Organization">
               </div>
               <div class="form-group">
                  <label>Role</label>
                  <input type="text" class="form-control" name="role" placeholder="Role">
               </div>
               <div class="form-group">
                  <label>Cause</label>
                  <input type="text" class="form-control" name="cause" placeholder="Cause">
               </div>
               <div class="form-group">
                  <label>description</label>
                  <textarea type="text" class="form-control" name="description" placeholder="Description"></textarea>
               </div>
               <input type="hidden" name="usr_id" value="{{ v._id }}">
               <div class="row">
                  <div class="col-lg-12">
                     <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
               </div>
            </form>
         </div>
      </div>
   </div>
</div>
