<% include ./templates/header %>
<div class="container">
    <form method="POST" action="newUser">
        <div class="row">
          <div class="form-group col-xs-12 col-md-6">
            <label>First Name</label>
            <input type="text" name="f_name" class="form-control" placeholder="First Name">
          </div>
          <div class="form-group col-xs-12 col-md-1">
            <label>M. Init</label>
            <input type="text" name="m_init" class="form-control" placeholder="M" maxlength="1">
          </div>
          <div class="form-group col-xs-12 col-md-5">
            <label>Last Name</label>
            <input type="text" name="l_name" class="form-control" placeholder="Last Name">
          </div>
      </div>
      <div class="form-group">
          <label>Address</label>
          <div class="row">
              <div class="col-xs-12 col-sm-3">
                  <input type="text" name="street" class="form-control" placeholder="Street Address"/>
              </div>
              <div class="col-xs-12 col-sm-3">
                  <input type="text" name="city" class="form-control" placeholder="City"/>
              </div>
              <div class="col-xs-12 col-sm-3">
                  <input type="text" name="state" class="form-control" placeholder="State"/>
              </div>
              <div class="col-xs-12 col-sm-3">
                  <input type="Number" name="zip" class="form-control" placeholder="Zip Code"/>
              </div>
          </div>
      </div>
      <div class="form-group">
          <label>Contact Information</label>
          <div class="row">
              <div class="col-xs-12 col-sm-6">
                  <input type="Number" name="home" pattern=".{10,10}" class="form-control" placeholder="Home Phone Number"/>
              </div>
              <div class="col-xs-12 col-sm-6">
                  <input type="Number" name="cell" pattern=".{10,10}" class="form-control" placeholder="Cell Phone Number"/>
              </div>
          </div>
      </div>
      <div class="form-group">
          <label>Objective</label>
          <input type="text" name="obj" class="form-control" placeholder="Objective">
      </div>
      <div class="form-group">
          <label>Job Interests</label>
          <div class="row">
              <div class="col-xs-12 col-md-4">
                  <select name="job_interests[]" class="form-control" id="catergories">
                  </select>
              </div>
              <div class="col-xs-12 col-md-4">
                  <select name="job_interests[]" class="form-control" id="catergories2">
                  </select>
              </div>
              <div class="col-xs-12 col-md-4">
                  <select name="job_interests[]" class="form-control" id="catergories3">
                  </select>
              </div>
          </div>
      </div>
      <button type="submit" class="btn btn-primary">Continue</button>
    </form>
</div>
<% include ./templates/footer %>
