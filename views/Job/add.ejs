<% include ../Templates/header.ejs %>
<div class="container" ng-controller="jobCtrl">
    <div class="page-header">
        <center><h1>Post a new Job</h1></center>
    </div>
    <form novalidate ng-submit="postJob()">
        <div class="row">
            <div class="form-group col-xs-12 col-sm-8">
                <label>Job Position</label>
                <input type="text" class="form-control" ng-model="position" placeholder="Job Position" required>
            </div>
            <div class="form-group col-xs-12 col-sm-4">
                <label>Job Catergory</label>
                <select ng-model="catergory" class="form-control" id="catergories">
                </select>
            </div>
        </div>
        <div class="form-group">
            <label>Description Teaser</label>
            <input type="text" class="form-control" ng-model="teaser" placeholder="Job Description" maxlength="100" required>
        </div>
        <div class="row">
            <div class="form-group col-xs-12 col-sm-6">
                <label>Description</label>
                <textarea type="text" class="form-control" ng-model="desc" placeholder="Job Description" required style="resize: none" rows=12></textarea>
            </div>

            <div id="dvSkillsSection" class="col-xs-12 col-sm-6">
                <label>Required Skills<span ng-show="same" style="color: red"><small>{{err_message2}}</small></span></label>
                <div class="form-group" data-input="0">
                    <div class="row">
                       <div class="col-xs-10">
                          <input ng-model="skill" placeholder="Enter Skill" class="form-control" id="catergories">
                       </div>
                       <div class="col-xs-2">
                          <div ng-click="addSkill()" class="btn btn-primary fa fa-plus"></div>
                       </div>
                       <div class="col-xs-12">
                          <div ng-repeat="jobSkill in reqSkills" class="col-sm-5 panel panel-default" ng-class="{'col-sm-offset-1': $index % 2 != 0}">
                             <div class="panel-body">
                                {{jobSkill}}
                                <span class="fa fa-times pull-right" ng-click="removeItem($index, reqSkills)"></span>
                             </div>
                          </div>
                       </div>
                    </div>
                </div><!-- /.col-lg-6 -->
            </div>
        </div>

        <div class="row">
            <div class="form-group col-xs-12 col-sm-4">
                <label>Pay Rate</label>
                <label class="sr-only" for="exampleInputAmount">Amount (in dollars)</label>
                <div class="input-group">
                    <div class="input-group-addon">$</div>
                    <input type="Number" ng-model="pay_rt" class="form-control" placeholder="Amount" min="9">
                    <div class="input-group-addon">/</div>
                    <!-- <input type="text" class="form-control" id="inputGroupSuccess3" aria-describedby="inputGroupSuccess3Status"> -->
                    <select ng-model="sal" class="form-control" id="catergories">
                        <option value="hr" selected>hr</option>
                        <option value="yr">yr</option>
                    </select>
                </div>
            </div>

            <div class="form-group col-xs-12 col-sm-8">
                <label>Deadline</label>
                <input type="date" class="form-control" ng-model="deadline" required>
            </div>
        </div>

        <div class="form-group">
            <label>Contact Information</label>
            <div class="row">
                <div class="col-sm-6">
                    <input type="text" class="form-control" ng-model="contact.phone" placeholder="Company Phone Number">
                </div>
                <div class="col-sm-6">
                    <input type="text" class="form-control" ng-model="contact.email" placeholder="Company Email">
                </div>
            </div>
        </div>
        <input type="hidden" value="" ng-model="logo">
        <input type="hidden" value="" ng-model="company_id">
        <button type="submit" class="btn btn-primary pull-right">Post New Job</button>
        <a href="/Business/Details/{{id}}" class="btn btn-default pull-left">Cancel</a>
    </form>
</div>
</body>
</html>
