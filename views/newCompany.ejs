<% include ./templates/header %>

<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Signup</h1>
    <!-- Sign Up FORM -->
    <form action="/registerCompany" method="POST">
        <div class="form-group">
            <label>Company Name</label>
            <input type="text" class="form-control" name="company_name" placeholder="Company Name" required>
        </div>
        <div class="form-group">
            <label>Company Address</label>
            <input type="text" class="form-control" name="company_address" placeholder="Company Address" required>
        </div>
        <div class="form-group">
            <label>Company History</label>
            <textarea type="text" class="form-control" name="history" placeholder="Company's History" style="resize: none" rows=12></textarea>
        </div>
        <div class="form-group">
            <label>Company Url</label>
            <input type="url" class="form-control" name="url" placeholder="URL">
        </div>
        <div class="form-group">
            <label>Company Logo</label>
            <input type="text" class="form-control" name="logo" placeholder="Company Logo Url"/>
        </div>
        <input type="hidden" name="roleID" value="1">
        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
    </form>
    <hr>
    <p>Already have an account? <a href="/login">Login</a></p>

</div>

</div>

<% include ./templates/footer %>
